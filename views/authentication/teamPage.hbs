
<h1>Team page</h1>
{{flightList}}
{{#each flightList}} <p>{{this}}</p> {{/each}}
<strong>Welcome, {{currentUser.name}}. Go <img src="/images/team-logos/{{yourTeam.Abbreviation}}.png" alt="">   {{yourTeam.Name}}! This is your team dashboard.</strong> 
 <br><br><br>
 <div class = 'table-responsive'><table class = "table  table-hover table-dark">
  <tr>
    <th class = "text-center"><p>Week</p></th>
    <th class = "text-center">Date</th> 
    <th class = "text-center">Opponent</th>
    <th  height = "10%"class = "text-center">Time</th>
  </tr>
   {{#each team}}
  <tr>
    <td class = "text-center">{{this.week}}</td>
    <td class = "text-center">{{this.date}}</td> 
    <td class = "text-center">  
        <form action="/game/{{this.id}}" method="GET" >
        <input name ="gameId" value ="{{this.id}}" type ="hidden">
        <button class ="btn btn-dark" id = "game-button" type = "submit" value = "{{this.id}}" style = "background-color: transparent">
            @ 
            <img src="/images/team-logos/{{this.homeTeam.Abbreviation}}.png" alt="" height = "30px" width = "30px"> 
            {{this.homeTeam.Abbreviation}}</button></form></td>
    <td class = "text-center">{{this.time}}</td>
  </tr>
 {{/each}}
 </table>
 </div>